<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/internet_usage_bg"
    android:padding="12dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_internet_usage"
        android:gravity="center"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.QS.Status"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/internet_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/internet_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_usage"
                android:textAppearance="@style/TextAppearance.QS.Status"
                android:drawableStart="@drawable/ic_wifi"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/wifi_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/wifi_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cellular_usage"
                android:textAppearance="@style/TextAppearance.QS.Status"
                android:drawableStart="@drawable/ic_cellular"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/mobile_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/mobile_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
